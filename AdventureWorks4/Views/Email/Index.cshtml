@{
	ViewData["Title"] = "Home Page";
}

@model AdventureWorks4.Models.SmtpParams

<div class="text-center">
	<div class="container">
		<div class="card">
			<div class="card-header">
			</div>
			<div class="card-body">
				<form asp-controller="Email" asp-action="SendEmail" method="post">
					<div class="form-group">
						<label for="SmtpServer">Servidor SMTP:</label>
						<input asp-for="SmtpServer" class="form-control" />
					</div>
					<div class="form-group">
						<label for="Port">Puerto:</label>
						<input asp-for="Port" class="form-control" />
					</div>
					<div class="form-group">
						<label for="SenderEmail">Correo del remitente:</label>
						<input asp-for="SenderEmail" class="form-control" />
					</div>
					<div class="form-group">
						<label for="Password">Contraseña:</label>
						<input asp-for="Password" class="form-control" />
					</div>
					<div class="form-group">
						<label for="receiverEmail">Correo del destinatario:</label>
						<input asp-for="ReceiverEmail" class="form-control" />
					</div>
					<div class="form-group">
						<label for="subject">Asunto:</label>
						<input asp-for="Subject" class="form-control" />
					</div>
					<div class="form-group">
						<label for="body">Cuerpo del mensaje:</label>
						<textarea asp-for="Body" class="form-control"></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Enviar correo</button>
				</form>
			</div>
		</div>
	</div>
</div>
